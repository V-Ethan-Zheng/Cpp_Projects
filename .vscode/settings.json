{
    "cmake.configureOnOpen": true, // 打开项目时自动配置 CMake
    "cmake.generator": "Ninja", // 使用 Ninja 作为生成器（更快），如果系统没有 Ninja，可去掉这行
    "cmake.buildDirectory": "${workspaceFolder}/build", // 指定构建输出目录
    // 以下设置是给 C/C++ 扩展（ms-vscode.cpptools）使用的，当使用 CMake 时，它们可以自动配置
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    // 如果您使用更现代的 clangd 作为语言服务器，可以禁用 C/C++ 扩展的智能提示以避免冲突
    // "C_Cpp.intelliSenseEngine": "disabled",
    "editor.cursorBlinking": "smooth" // 保留您的编辑器设置
}